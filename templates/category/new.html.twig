{% extends 'base.html.twig' %}

{% block title %}New Category{% endblock %}

{% block body %}

    <div class="container my-5">
        <h1 class="text-end">Create new Category</h1>
        <hr>

        {{ form_start(form) }}
        <div class="mt-5">
            <div class="col-4">
                <h4>Category's name</h4>
                {{ form_row(form.name) }}
            </div>
        </div>

        <div class="d-flex align-items-center justify-content-start mt-3 mb-5">
            <a href="{{ path('app_task_index') }}" class="btn btn-secondary me-3">
                <i class="fa-solid fa-chevron-left"></i>
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="fa-regular fa-floppy-disk"></i>
            </button>
        </div>
        {{ form_end(form) }}

    </div>

{% endblock %}
