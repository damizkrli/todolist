{% extends 'base.html.twig' %}

{% block title %}Edit Task{% endblock %}

{% block body %}
    <div class="container">
        <h1>Edit {{ task.name }}</h1>

        {% include '/details.html.twig' %}

        {{ form_start(form) }}

        <div class="row">
            <div class="col-4">
                <h4>Name</h4>
                {{ form_row(form.name) }}
            </div>

            <div class="col-4">
                <h4>Category</h4>
                {{ form_row(form.category) }}
            </div>

            <div class="col-4">
                <h4>Status</h4>
                {{ form_row(form.status) }}
            </div>
        </div>

        <div class="row mt-5">
            <h4>Description</h4>
            <div class="col-12">{{ form_row(form.description) }}</div>
        </div>

        <div class="row mt-5">
            <div class="col-12">
                <h4>Assign Users</h4>
                <div class="d-flex flex-wrap">
                    {% for user in form.users %}
                        <div class="me-3">
                            {{ form_row(user) }}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>

        <div class="d-flex align-items-center justify-content-center mt-3 mb-5">
            <a href="{{ path('app_task_index') }}" class="btn btn-secondary me-3">
                <i class="fa-solid fa-chevron-left"></i>
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="fa-regular fa-floppy-disk"></i>
            </button>
        </div>

        {# CHAMPS A CACHER #}
        {% if form.priority is defined %}
            {{ form_row(form.priority) }}
        {% endif %}
        {% if form.limitDate is defined %}
            {{ form_row(form.limitDate) }}
        {% endif %}
        {% if form.createdAt is defined %}
            {{ form_row(form.createdAt) }}
        {% endif %}

        {{ form_end(form) }}

    </div>
{% endblock %}

