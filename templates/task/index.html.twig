{% extends 'base.html.twig' %}

{% block title %}Task index{% endblock %}

{% block body %}

    <div class="container mt-3">
        <div class="row">
            <div class="col-8">
                <h1>My tasks</h1>
                <table class="table">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Category</th>
                        <th>LimitDate</th>
                        <th>CreatedAt</th>
                        <th>Users associated</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for task in tasks %}
                        <tr>
                            <td>{{ task.name }}</td>
                            <td>{{ task.category }}</td>
                            <td>{{ task.limitDate ? task.limitDate|date('d-m-Y') : '' }}</td>
                            <td>{{ task.createdAt ? task.createdAt|date('d-m-Y') : '' }}</td>
                            <td>
                                {% if task.users is not empty %}
                                    {% for user in task.users %}
                                        <p>{{ user.firstname }} {{ user.lastname }}</p>
                                    {% endfor %}
                                {% else %}
                                    <p>Aucun utilisateur associ√©</p>
                                {% endif %}
                            </td>
                            <td>
                                <div class="button-group">
                                    <a href="{{ path('app_task_show', {'id': task.id}) }}" class="btn btn-info me-3">
                                        <i class="fa-regular fa-circle-question"></i>
                                    </a>
                                    <a href="{{ path('app_task_edit', {'id': task.id}) }}" class="btn btn-secondary me-3">
                                        <i class="fa-regular fa-pen-to-square"></i>
                                    </a>
                                    <form method="post" action="{{ path('app_task_delete', {'id': task.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class="d-inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ task.id) }}">
                                        <button type="submit" class="btn btn-danger">
                                            <i class="fa-regular fa-trash-can"></i>
                                        </button>
                                    </form>
                                </div>

                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8" class="text-end">ADD A TASK <i class="fa-solid fa-arrow-right-long"></i></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="col-4">
                <h1>New Task</h1>

                {{ form_start(form) }}
                {{ form_widget(form) }}
                    <button class="btn btn-success me-5 mb-5">{{ button_label|default('Save') }}</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
